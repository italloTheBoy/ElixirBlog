<main class="box">
  <header>
    <h1><%= @user.username %></h1>
  </header>
  
  <%= if @user == @conn.assigns.current_user do %>
    <nav>
      <ul>
        <li><%= link "FaÃ§a uma postagem", to: Routes.post_path(@conn, :new) %></li>
        <li>Atualizar meus dados</li>
        <li>Excluir essa conta</li>
      </ul>
    </nav>
  <% end %>
</main>


<section>
  <header>
    <h2>Posts:</h2>
  </header>

  <%= for post <- @posts do %>
    <article class="box">
      <strong>
        <%= link post.user.username, to: Routes.post_path(@conn, :show, post.id) %>
      </strong>

      <p><%= post.text %></p>
      
      <%= case get_like_type(post.user.id, post.id) do %>
        <% :like -> %>
          <%= button "like", 
            to: Routes.post_like_path(@conn, :delete, post.id), 
            method: :delete
          %>

          <%= button "dislike", 
            to: Routes.post_like_path(@conn, :update, post.id), 
            class: "btn-gray", 
            method: :patch 
          %>
        
        <% :unlike -> %>
          <%= button "like", 
            to: Routes.post_like_path(@conn, :create, post.id, "like"), 
            class: "btn-gray" 
          %>
          
          <%= button "dislike", 
            to: Routes.post_like_path(@conn, :create, post.id, "dislike"), 
            class: "btn-gray" 
          %>
        
        <% :dislike -> %>
          <%= button "like", 
            to: Routes.post_like_path(@conn, :update, post.id), 
            class: "btn-gray", 
            method: :patch 
          %>

          <%= button "dislike", 
            to: Routes.post_like_path(@conn, :delete, post.id), 
            class: "btn-red",
            method: :delete
          %>
      <% end %>
    </article>
  <% end %>
  </section>