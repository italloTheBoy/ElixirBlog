<%= form_for @changeset, Routes.post_comment_path(@conn, :create, @post_id), fn f -> %>
  <fieldset>
    <%= hidden_input f, :post_id, [value: @post_id] %>

    <%= label f, :text, "FaÃ§a seu comentario:" %>
    <%= textarea f, :text, [maxlength: 255, required: true] %>

    <%= error_tag f, :user_id %>
    <%= error_tag f, :post_id %>
    <%= error_tag f, :user %>
    <%= error_tag f, :post %>
    <%= error_tag f, :text %>

    <%= submit "Comentar" %>
  </fieldset>
<% end %>