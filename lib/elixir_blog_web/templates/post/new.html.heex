<%= form_for @changeset, Routes.post_path(@conn, :create), fn f -> %>
  <fieldset>
    <%= hidden_input f, :user_id, value: @conn.assigns.current_user.id %>

    <%= label f, :text, "Make your post" %>
    <%= textarea f, :text, [maxlength: 255, required: true, autofocus: true] %>

    <%= submit "Post" %>
  </fieldset>
<% end %>